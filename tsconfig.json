{
  "compilerOptions": {
                                   
     "experimentalDecorators": true,                   
     "emitDecoratorMetadata": true,                    
    
     "module": "commonjs",                                
                              
     "allowJs": true,                                  
                           
    "esModuleInterop": true,                             
                             
    "forceConsistentCasingInFileNames": true,            

     "strict": true,                                      
                                            
    "skipLibCheck": true,
    "outDir": "./build/src",
    "resolveJsonModule": true,
    "target": "es2019",
    "strictPropertyInitialization": false
                                     
 },
 "include": [
   "src/**/*"
 ]

}
